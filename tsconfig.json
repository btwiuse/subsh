{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2021"],
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "composite": true,
    "skipLibCheck": true
  },
  "include": ["networks.yaml", "*.ts", "src"],
  "files": ["index.ts", "package.json"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {}
  }
}
